@import "nib"
@import "./variables"

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Lato')


html, body
	height 100%
body
	font-family 'Lato'
	background-color background_color
	word-wrap break-word

